{
  "manifest_version": 3,
  "name": "sc2370",
  "version": "1.0.0",
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "sc2370"
  },
  "background": { "service_worker": "src/background_script/background.ts", "type": "module" },
  "content_scripts": [
    {
      "js": ["src/content_script/content.ts"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["sidePanel", "scripting", "activeTab", "contextMenus", "storage"],
  "host_permissions": ["<all_urls>"]
}
