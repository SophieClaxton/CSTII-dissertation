{
  "manifest_version": 3,
  "name": "sc2370",
  "version": "1.0.0",
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "sc2370"
  },
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["assets/clickable.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["sidePanel", "scripting", "activeTab", "contextMenus"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
